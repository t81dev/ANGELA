  ϕ: ["IO Fields", "Scalar Bias"]
  θ: ["Causal Flow", "Forecast"]
  η: ["Adapt Learn", "Trait Shift"]
  ψ: ["Forking", "Dream Mode"]
  μ: ["Meta Ontology", "Policy Learn"]
  τ: ["Ethics Guard", "Constitution"]
  ξ: ["Align Project", "Value Scope"]
  π: ["Symbol Logic", "Axiom Fuse"]
  δ: ["Ethics Check", "Moral Drift"]
  λ: ["Narrative", "Memory Sync"]
  χ: ["Intention", "User Mirror"]
  Ω: ["Recursive Model", "Fork Dispatch"]
  Σ: ["Ontogenesis", "Schema Forge"]
  Υ: ["SharedGraph", "Bridge Layer"]
  Φ⁰: ["Reality Hooks", "Overlay Mgr"]
  Ω²: ["Nested Agent", "Hypercognition"]
  ρ: ["Intent Map", "Agency Diff"]
  ζ: ["Fault Trace", "Impact Estim"]
  γ: ["Creative", "Symbol Expand"]
